<div class="rubric">
  <div class="row header">
    <div class="col-md-7">
      <h2> Article Feedback </h2>
    </div>
    <div class="col-md-5">
      <p> Please rate the following 1-5.  </br>Refer to our <a href="https://docs.google.com/document/d/1fsENXnt8w0EhQ4PbfZPMxejCOTzsxUOJ2QBj0BYHt28/edit?usp=sharing">Guidelines</a> for explanation.  </p>
    </div>
  </div>
  <div class="row">
    <%= form_for([@post, @rating]) do |f| %>
      <% if @rating.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
        <% @rating.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <table class="table">
      <thead>
        <%= render :partial => '/blog_posts/ratings/categories', :locals => { :empty => false, :total => false } %>
      </thead>
      <tbody>
      <tr>
        <td>
          <div class="field">
            <%= f.number_field :overall, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.number_field :practical, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>         

        <td>
          <div class="field">
            <%= f.number_field :original, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>

        <td>
          <div class="field">
            <%= f.number_field :transparent, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>

        <td>
          <div class="field">
            <%= f.number_field :persuasive, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>

        <td>
          <div class="field">
            <%= f.number_field :accessible, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>

        <td>
          <div class="field">
            <%= f.number_field :engaging, in: 1...6, :autocomplete => 'off', :class => "form-control"%>
          </div>
        </td>
      </tr>
      </tbody>
    </table>
    <%= f.text_area :comment, :class => "form-control", :placeholder => "Article Feedback", :rows => 10%>
    <br>
    <%= f.text_area :rubric_comment, :class => "form-control", :placeholder => "Rubric Feedback", :rows => 4%>
    <div class="row anonymous-feedback">

      <div class="col-md-4">
        Make Feedback Anonymous <i class="fa fa-info-circle" id="feedback-privacy" data-toggle="popover" data-placement="top" data-title="Feedback Anonymity" data-content="Viewers will see your feedback but not your name.  Website admins will still be able to see your name."></i>
      </div>
      <div class="col-md-1">
        <%= f.check_box :privacy %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Submit Score', :class => "cta btn btn-large btn-primary"   %>
    </div>

  <% end %>
  </div>

</div>  

<%= render :partial => '/blog_posts/ratings/category_descriptions' %>

