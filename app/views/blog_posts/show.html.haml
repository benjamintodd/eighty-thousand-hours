.blog
  .row.show
    .col-md-9
      = render @post
      .social-media-horizontal
        .row
          - if current_user and can? :read, Rating
            .col-md-12.ratings
              - if @user_rating.nil?
                = render :partial => "/blog_posts/ratings/form"
              - else
                = render :partial => "/blog_posts/ratings/summary"
        .row
          .col-md-12
            = render :partial => "social_media_horizontal"
      .comments
        = render :partial => "/shared/disqus"
    .col-md-3
      - if can? :manage, @post
        .controls
          .manage_buttons
            = link_to "Edit Post", edit_blog_post_path(@post), :class => 'btn btn-mini btn-default'
            = link_to 'Delete', blog_post_path(@post), :confirm => "Are you sure you want to delete the post '#{@post.title}'?", :method => :delete, :class => 'btn btn-mini btn-danger'
      = render :partial => "social_media"
