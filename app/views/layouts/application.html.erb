    <noscript>
    <div style="display:none;">
    <img src="//pixel.quantserve.com/pixel/p-1J6MBer_R0ywy.gif" border="0" height="1" width="1" alt="Quantcast"/>
    </div>
    </noscript>
    <!-- End Quantcast tag -->
  </body>

  <%# hidden image which will be displayed on facebook posts if no other image present %>
  <%= image_tag '/assets/images/opengraph/logo.png', class: 'hidden-opengraph-image' %>
</html>

