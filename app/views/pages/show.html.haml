.row
  .col-md-9
    = render :partial => 'admin_box'
.row
  .col-md-9
    = markdown @page.body
  .col-md-3
    .box.sidebar.page-sidebar
      - if @page.sidebar?
        - top_level = @page.root
        %ul.nav.nav-pills.nav-stacked
          %li.heading
          - top_level.children.display_in_menu.each do |c|
            - if c == @page
              %li.active
                = c.get_menu_link
            - else
              %li
                = c.get_menu_link
